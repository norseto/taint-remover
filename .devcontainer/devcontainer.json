// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/debian
{
  "name": "taint-remover",
  "image": "mcr.microsoft.com/devcontainers/base:bullseye",
  "features": {
    "ghcr.io/devcontainers/features/go:1": {
      "version": "1.24"
    },
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
      "version": "latest",
      "helm": "latest",
      "minikube": "none"
    },
    "ghcr.io/mpriscella/features/sops:1": {},
    "ghcr.io/mpriscella/features/kind:1": {},
    "ghcr.io/rio/features/kustomize:1": {},
    "ghcr.io/audacioustux/devcontainers/kubebuilder:1": {},
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/norseto/features/codex-cli:0.3.4": { "install-bun": true },
    "ghcr.io/norseto/features/gemini-cli:0.2.2": { "install-bun": true },
    "ghcr.io/anthropics/devcontainer-features/claude-code:1": {}
  },

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],

  // Configure tool-specific properties.
  "remoteEnv": {
    "CONTAINER_WORKSPACE_FOLDER": "${containerWorkspaceFolder}",
    "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}",
    "GOCACHE": "/tmp/gocache"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "git.enabled": false
      },
      "extensions": [
        "editorconfig.editorconfig",
        "googlecloudtools.cloudcode"
      ]
    }
  },

  "remoteUser": "vscode",
  "postCreateCommand": "bash .devcontainer/post-create.sh",

  "mounts": [
    "type=volume,source=aws-cred,target=/home/vscode/.aws,consistency=delegated",
    "type=volume,source=oci-k8s-cred,target=/home/vscode/.kube,consistency=delegated",

    "type=volume,source=go-sdk-1-24,target=/usr/local/go,consistency=delegated",
    "type=volume,source=go-path,target=/go,consistency=delegated",
    "type=volume,source=go-cache,target=/tmp/gocache,consistency=delegated",
    "type=volume,source=jetbrains-taint-remover,target=/home/vscode/.cache/JetBrains,consistency=delegated"
  ]
}
